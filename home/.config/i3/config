    bindsym m exec thunderbird; mode "default"
    bindsym t exec kitty btop; mode "default"
    bindsym w exec "$HOME/.local/share/AppImage/zen_browser.appimage"; mode "default"

    # back to normal: Enter or Escape or $mod+o
    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym $mod+o mode "default"
}

